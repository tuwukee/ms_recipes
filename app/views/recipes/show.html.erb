<% if params[:modal] %>
  <%= render "shared/modal" do %>
    <div class="flex max-w-lg w-full bg-white mx-auto">
      <div class="relative text-white">
        <%= render "recipe", recipe: @recipe %>
        <div class="flex flex-row relative pb-10 space-x-4 z-10 mt-3 cursor-pointer">
          <a data-action="modal#close" class="flex items-center py-2 px-4 rounded-full mx-auto text-white bg-red-500 hover:bg-red-700">
            <div class="text-sm text-white ml-2 mr-2">Close</div>
          </a>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="bg-black w-full">
    <section class="container mx-auto mt-20 px-5">
      <div class="text-white">
        <%= render "recipe", recipe: @recipe %>
        <div class="flex flex-row relative pb-10 space-x-4 z-10 mt-8 cursor-pointer">
          <a class="flex items-center py-2 px-4 rounded-full mx-auto text-white bg-red-500 hover:bg-red-700" href="<%= root_path %>">
            <div class="text-sm text-white ml-2 mr-2">Back to All Recipes</div>
          </a>
        </div>
      </div>
    </section>
  </div>
<% end %>
