<section class="flex flex-col">
  <div class="flex flex-col md:flex-row md:justify-center items-start flex-wrap">
    <% @recipes.each do |recipe| %>
      <turbo-frame id="selected-recipe-<%= recipe.id %>">
        <div class="border border-gray-200 rounded mr-6 mt-6 max-w-lg min-w-300 hover:scale-105 transform transition-all duration-500">
          <a href="<%= recipe_path(recipe.id) %>">
            <img src="<%= recipe.photo&.url %>" />
            <p class="p-5"><%= recipe.title %></p>
          </a>
        </div>
      </turbo-frame>
    <% end %>
  </div>
</section>
